@model Ecommerce.Data.ProductImages
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-body">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-md-4 col-lg-4 col-sm-12">
                    <label asp-for="ProductID"></label>
                   <select class="form-control" asp-for="ProductID" asp-items="@(ViewBag.ProductName) as SelectList">
                       <option selected disabled>--Select Product--</option>
                   </select>
                    <span asp-validation-for="ProductID"></span>
                </div>
                <div class="col-md-4 ">
                    <label asp-for="ImagePath" class="control-label"></label>
                    <input type="file" multiple name="Images" class="form-control" />
                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Save</button>

        </form>
    </div>
</div>
