@model IEnumerable<Ecommerce.Data.ProductImages>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Product Images";
}

<style>
    .img-table{
        height:25%;
        width:25%;
    }
</style>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><a class="btn btn-info" asp-action="Create" asp-controller="ProductImages">Create</a></h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>ImagePath</th>
                                    <th>Category</th>
                                    <th style="width:25%;">Image</th>
                                    <th>Action</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.ImagePath</td>
                                        <td>@item.Product.Category.CategoryName</td>
                                        <td><img class="img-table" src="@item.ImagePath" alt="image" /></td>
                                        
                                        
                                        <td>
                                            <ul class="list-inline">
                                                <li class="list-inline-item"><a class="btn btn-primary" asp-action="Update" asp-controller="Category" asp-route-productId="@item.Id">Edit</a></li>
                                                <li class="list-inline-item"><a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-productId="@item.Id">Delete</a></li>
                                            </ul>
                                        </td>
                                    </tr>
                                }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>