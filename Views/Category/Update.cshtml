@model Ecommerce.Data.Category

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form method="post" asp-action="Update">
            <div class="form-group">
                <input asp-for="Id" hidden />
                <div class="col-md-4 col-lg-4 col-sm-12">
                    <label asp-for="CategoryName"></label>
                    <input type="text" class="form-control" asp-for="CategoryName" />
                    <span asp-validation-for="CategoryName"></span>
                </div>
                <div class="col-md-4 col-lg-4 col-sm-12">
                    <label asp-for="ParentID"></label>
                    <input type="text" class="form-control" asp-for="ParentID" />
                    <span asp-validation-for="ParentID"></span>
                </div>

            </div>
            <button class="btn btn-primary" type="submit">Update</button>

        </form>
    </div>
</div>