@model IEnumerable<Ecommerce.Data.Color>

@{
    ViewData["Title"] = "Color List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><a class="btn btn-info" asp-action="Create" asp-controller="Color">Create</a></h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        <ul class="list-inline">
                                            <li class="list-inline-item"><a class="btn btn-primary" asp-action="Update" asp-controller="Color" asp-route-ColorID="@item.Id">Edit</a></li>
                                                <li class="list-inline-item"><a class="btn btn-danger" asp-action="Delete" asp-controller="Color" asp-route-colorID="@item.Id">Delete</a></li>
                                        </ul>
                                    </td>
                                </tr>
                                }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

