                        <div class="position-relative overflow-hidden">
                            <div class="product-options d-flex align-items-center justify-content-center gap-2 mx-auto position-absolute bottom-0 start-0 end-0">
                                <a href="javascript:;"><i class="bi bi-heart"></i></a>
                                <a href="javascript:;"><i class="bi bi-basket3"></i></a>
                                <a href="javascript:;" data-bs-toggle="modal" data-bs-target="#QuickViewModal">
                                    <i class="bi bi-zoom-in"></i>
                                </a>
                            </div>
                            @if(product.ProductImages!=null)
                        {
                            <a asp-controller="Home" asp-action="Details" asp-route-productID="@product.Id">
                                @* <img src="~/Common/assets/images/featured-products/01.webp" class="card-img-top" alt="..."> *@
                                <img src="@product.ProductImages.FirstOrDefault()?.ImagePath" class="card-img-top" alt="...">
                            </a>
                        }
                        else
                        {
                            <a href="product-details.html">
                                 <img src="~/Common/assets/images/featured-products/01.webp" class="card-img-top" alt="...">
                               
                            </a>
                        }

                        </div>
                        <div class="card-body">
                            <div class="product-info text-center">
                                <h6 class="mb-1 fw-bold product-name">@product.Name</h6>
                                <div class="ratings mb-1 h6">
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                    <i class="bi bi-star-fill text-warning"></i>
                                </div>
                                <p class="mb-0 h6 fw-bold product-price">$ @product.Price</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
       
